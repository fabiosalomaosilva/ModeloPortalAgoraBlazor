<i class="tooltip">
    <span>@Text</span>
</i>

<style>
    i.tooltip {
        margin-left: 5px!important;
        text-decoration: none!important;
    }
    
    i.tooltip:hover {
        cursor: alias pointer!important;
        position: relative!important;
        font-style: normal!important;
    }
    i.tooltip span {
        display: none!important;
    }
    
    i.tooltip:hover span {
        border: #dfdfdf 1px solid!important;
        border-radius: 5px!important;
        padding: 5px 20px 5px 5px!important;
        display: block!important;
        z-index: 100!important;
        background: #fff no-repeat 100% 5%!important;
        left: 0px!important;
        margin: 10px!important;
        width: 350px!important;
        position: absolute!important;
        top: 10px!important;
        text-decoration: none!important;
        font-size: small!important;
        padding: 15px!important;
        box-shadow: 2px 2px 10px 2px #c7c7c7!important;
    }
    
    i.tooltip:before {
        content: url('img/help.svg')!important;
    }
</style>

@code {
    [Parameter]
    public string Text { get; set; }
}